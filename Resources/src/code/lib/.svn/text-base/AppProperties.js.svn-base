require('src/include/require_once').monkeypatch(this)
var variable = require('src/code/lib/var')
var exports  = exports || {}


	function appVarGET( name, defaultValue, type )
	{
		var type  = type || variable.type(defaultValue)
		var value = null
		switch (type)
		{
			case 'boolean' :  value = Ti.App.Properties.getBool  (name);	break
			case 'float'   :  value = Ti.App.Properties.getDouble(name); 	break
			case 'int'     :  value = Ti.App.Properties.getInt   (name);	break
			case 'sequence':  value = Ti.App.Properties.getList  (name);	break
			default		   :  value = Ti.App.Properties.getString(name);	break
		}
	return value || defaultValue
	}exports.appVarGET = appVarGET

	function appVarSET( name, value, type )
	{
		var type = type || variable.type(defaultValue)
		switch (type)
		{
			case 'boolean' :  Ti.App.Properties.setBool  ( name, value );	break
			case 'float'   :  Ti.App.Properties.setDouble( name, value ); 	break
			case 'int'     :  Ti.App.Properties.setInt   ( name, value );	break
			case 'sequence':  Ti.App.Properties.setList  ( name, value );	break
			default		   :  Ti.App.Properties.setString( name, value );	break
		}
	return type
	}exports.appVarSET = appVarSET

